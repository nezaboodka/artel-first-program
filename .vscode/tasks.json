{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Запустить без отладки (артель пуск)",
      "group": "build",
      "type": "shell",
      "command": "node n-artel launch .. ./Executable",
      "options": {
        "cwd": ".сборка"
      },
      "problemMatcher": []
    },
    {
      "label": "Собрать проект (артель собрать)",
      "group": "build",
      "type": "shell",
      "command": "node n-artel build .. ./Executable",
      "options": {
        "cwd": ".сборка"
      },
    },
    {
      "label": "Скачать пакеты (артель скачать-пакеты)",
      "group": "build",
      "type": "shell",
      "command": "npm install --no-fund",
      "options": {
        "cwd": ".сборка"
      },
    },
  ]
}
