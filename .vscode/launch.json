  "version": "0.2.0",
  "configurations": [
    {
      "name": "Запуск",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/@",
      "runtimeArgs": [
        // "--inspect"
      ],
      "args": [
        "пуск",
        "${relativeFileDirname}",
        "${workspaceFolder}/.сборка/${relativeFileDirname}"
      ],
      "console": "integratedTerminal",
      "autoAttachChildProcesses": false,
      "sourceMaps": true,
      "smartStep": true,
      "skipFiles": [
        "<node_internals>/**/*.js"
      ],
    },
    {
      "name": "Запуск (через расширение VS Code)",
      "type": "artel",
      "request": "launch",
      "project": "${workspaceFolder}/${relativeFileDirname}"
    }
  ]
}
